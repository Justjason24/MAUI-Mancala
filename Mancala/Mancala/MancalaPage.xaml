<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mancala"
             x:Class="Mancala.MancalaPage">




    <Grid RowDefinitions="Auto, *, Auto"
            ColumnDefinitions="*"
            Padding="20"
            BackgroundColor="#84240c"
            HorizontalOptions="Center"
            VerticalOptions="Center">

        <!-- Top bank -->
            <Border
            Grid.Row="0"
            HeightRequest="80"
            WidthRequest="250"
            Background="#ffc18c"
            Stroke="Black"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 30"/>

        <!-- Pebble pools 2x6 -->
            <Grid Grid.Row="1"
                  ColumnSpacing="10"
                  Padding="10"
                  RowSpacing="10"
                  RowDefinitions="*,*,*,*,*,*"
                  ColumnDefinitions="*,*">



            <Ellipse x:Name="Pit00" Grid.Row="0" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit10" Grid.Row="1" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit20" Grid.Row="2" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit30" Grid.Row="3" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit40" Grid.Row="4" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit50" Grid.Row="5" Grid.Column="0" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />

                <Ellipse x:Name="Pit01" Grid.Row="0" Grid.Column="1" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit11" Grid.Row="1" Grid.Column="1" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit21" Grid.Row="2" Grid.Column="1" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit31" Grid.Row="3" Grid.Column="1" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
                <Ellipse x:Name="Pit41" Grid.Row="4" Grid.Column="1" Fill="#ffc18c" HeightRequest="60" WidthRequest="60" />
            <Ellipse x:Name="Pit51"
         Grid.Row="5"
         Grid.Column="1"
         Fill="#ffc18c"
         HeightRequest="60"
         WidthRequest="60">
                <Ellipse.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Pit51_Tapped" />
                </Ellipse.GestureRecognizers>
            </Ellipse>


            <!-- Pebble (black circle) initially in Pit51 -->
            <GraphicsView
                        x:Name="Pebble"
                        HeightRequest="20"
                        WidthRequest="20"
                        Grid.Row="5"
                        Grid.Column="1">
                <GraphicsView.Drawable>
                    <local:CircleDrawable />
                </GraphicsView.Drawable>
            </GraphicsView>

        </Grid>

            <!--bottom store-->
            <Border Grid.Row="2"
                    HeightRequest="80"
                    WidthRequest="250"
                    Background="#ffc18c"
                    Stroke="Black"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 30" />

    </Grid>

</ContentPage>